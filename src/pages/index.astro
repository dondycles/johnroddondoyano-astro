---
import BlackKey from '@/components/BlackKey.astro';
import FormWithRecaptcha from '@/components/FormWithRecaptcha';
import { Button } from '@/components/ui/button';
import RootLayout from '@/layouts/RootLayout.astro';
import { MUSIC_STORES } from '@/lib/music-stores';
import { SOCIALS } from '@/lib/socials';
import { Image } from 'astro:assets';
import { ChevronDown } from 'lucide-react';
import { FaChevronRight, FaExternalLinkAlt } from 'react-icons/fa';

const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'John Rod Dondoyano',
  url: 'https://johnroddondoyano.com',
  image: 'https://johnroddondoyano.com/JRLOGO.webp',
  description:
    'Musician and web developer. Expressing the syntax of music on YouTube and debugging the rhythm of web development. Sometimes programming from the piano bench, and often creating music from the codebase.',
  jobTitle: 'Musician & Web Developer',
  sameAs: [
    'https://youtube.com/johnroddondoyano',
    'https://tiktok.com/@dondycles',
    'https://open.spotify.com/artist/2opN2BRNgnBJIO932Kyr3U',
    'https://music.apple.com/us/artist/john-rod-dondoyano/1716913960',
    'https://music.youtube.com/channel/UCKk0kHA3fmAkxoaqYj_2RSw',
    'https://music.amazon.com/artists/B088P7883M/john-rod-dondoyano',
    'https://www.deezer.com/en/artist/94847662',
    'https://tidal.com/artist/19629668',
    'https://facebook.com/dondycles',
    'https://instagram.com/dondycles',
    'https://x.com/dondycles',
    'https://github.com/dondycles',
  ],
};

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'Featured Offerings by John Rod Dondoyano',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: '316k+ Subscribers on YouTube',
      url: 'https://youtube.com/johnroddondoyano',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: '360+ Piano Sheets',
      url: 'https://mymusicsheet.com/johnroddondoyano',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: '300+ MIDI/MusicXML Files',
      url: 'https://payhip.com/johnroddondoyano',
    },
    {
      '@type': 'ListItem',
      position: 4,
      name: 'Stream on Apple Music',
      url: 'https://music.apple.com/us/artist/john-rod-dondoyano/1716913960',
    },
    {
      '@type': 'ListItem',
      position: 5,
      name: 'Stream on Spotify',
      url: 'https://open.spotify.com/artist/2opN2BRNgnBJIO932Kyr3U',
    },
    {
      '@type': 'ListItem',
      position: 6,
      name: 'Stream on YouTube Music',
      url: 'https://music.youtube.com/channel/UCKk0kHA3fmAkxoaqYj_2RSw',
    },
    {
      '@type': 'ListItem',
      position: 7,
      name: 'Stream on Amazon Music',
      url: 'https://music.amazon.com/artists/B088P7883M/john-rod-dondoyano',
    },
    {
      '@type': 'ListItem',
      position: 8,
      name: 'Stream on Deezer',
      url: 'https://www.deezer.com/en/artist/94847662',
    },
    {
      '@type': 'ListItem',
      position: 9,
      name: 'Stream on Tidal',
      url: 'https://tidal.com/artist/19629668',
    },
  ],
};
---

<RootLayout
  seo={{
    title: 'Musician & Web Developer | ',
    description:
      'John Rod Dondoyano — pianist with 300k YouTube subscribers, 300+ piano sheets, and a passion for web development. Explore piano covers, sheet music, MIDI files, and more.',
  }}
>
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
  <header
    class="group/header bg-primary relative flex min-h-128 w-full items-end overflow-hidden shadow-[0px_12px_0px_#00000011]"
  >
    <img
      class="max-w-auto blur-0 pointer-events-none absolute top-0 left-1/2 z-0 h-full -translate-x-1/2 object-cover opacity-100 transition-all duration-300 ease-in-out group-hover/header:opacity-50 group-hover/header:blur-xs"
      src="JRLOGO-white.gif"
      alt="John Rod Dondoyano — Musician, and Web Developer"
      loading="eager"
    />

    <div
      class="z-1 mx-auto w-full max-w-lg space-y-2 bg-gradient-to-b from-transparent to-black/50 to-25% px-4 py-12"
    >
      <h1 class="text-background text-3xl font-bold">John Rod Dondoyano</h1>
      <p class="text-muted-foreground">
        Expressing the syntax of music on <a
          href="https://youtube.com/johnroddondoyano"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="John Rod Dondoyano on YouTube">YouTube</a
        > and debugging the rhythm of <a href="/web-development">web development</a>. Sometimes
        programming from the piano bench, and often creating music from the codebase.
      </p>
      <ChevronDown client:load className="text-muted-foreground mx-auto animate-bounce" />
    </div>
  </header>
  <div class="overflow-hidden">
    <section
      class="[&>article>p]:text-muted-foreground mt-3 flex flex-col divide-y [&>article]:relative [&>article]:px-4 [&>article]:py-12 [&>article]:last:border-b-0 [&>article>h2]:text-lg [&>article>h2]:font-bold [&>article>p]:mb-3"
      aria-label="Featured content and offerings"
    >
      <article>
        <h2>316k+ Subscribers on YouTube</h2>
        <p>Join my growing family of music lovers and piano enthusiasts.</p>
        <div class="flex items-center gap-2">
          <FaChevronRight className="text-muted-foreground/65 text-xs" />
          <a
            href="https://youtube.com/johnroddondoyano"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Subscribe to John Rod Dondoyano on YouTube"
          >
            <Button variant={'outline'} size={'icon'}
              ><Image
                src="https://www.youtube.com/s/desktop/2a3cb36e/img/favicon_144x144.png"
                alt="YouTube"
                width={28}
                height={28}
              /></Button
            >
          </a>
        </div>

        <BlackKey />
      </article>
      <article>
        <h2>360+ Piano Sheets on MyMusicFive</h2>
        <p>Explore my collection of piano sheet music.</p>
        <div class="flex items-center gap-2">
          <FaChevronRight className="text-muted-foreground/65 text-xs" />
          <a
            href="https://mymusicfive.com/johnroddondoyano"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Buy piano sheet music by John Rod Dondoyano on MyMusicFive"
          >
            <Button variant={'outline'} size={'icon'}
              ><Image
                src="https://imgproxy.mapia.io/static/mms/favicon/png/apple-icon-180x180.png"
                alt="MyMusicFive"
                width={28}
                height={28}
              /></Button
            >
          </a>
        </div>

        <BlackKey />
      </article>
      <article>
        <h2>300+ MIDI/MusicXML Files</h2>
        <p>Download MIDI/MusicXML files for better piano learning.</p>
        <div class="flex items-center gap-2">
          <FaChevronRight className="text-muted-foreground/65 text-xs" />
          <a
            href="https://payhip.com/johnroddondoyano"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Buy MIDI and MusicXML files by John Rod Dondoyano on Payhip"
          >
            <Button variant={'outline'} size={'icon'}
              ><Image
                src="https://payhip.com/images/designv2/favicon/apple-touch-icon-114x114.png"
                alt="Payhip"
                width={28}
                height={28}
              /></Button
            >
          </a>
        </div>
      </article>
      <article>
        <h2>14k+ Listeners on Music Streaming Platforms</h2>
        <p>Stream my piano covers on popular music platforms.</p>
        <div class="flex items-center gap-2">
          <FaChevronRight className="text-muted-foreground/65 text-xs" />
          <nav aria-label="Music streaming platforms" class="inline-flex flex-wrap gap-2">
            {
              MUSIC_STORES.map((store) => (
                <a
                  href={store.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Listen on ${store.name}`}
                >
                  <Button variant={'outline'} size={'icon'}>
                    <Image src={store.icon} alt={store.name} width={28} height={28} />
                  </Button>
                </a>
              ))
            }
          </nav>
        </div>
        <BlackKey />
      </article>
      <article>
        <h2>Follow Me on Social Media</h2>
        <p>Get the latest updates on my music, videos, and projects.</p>
        <div class="flex items-center gap-2">
          <FaChevronRight className="text-muted-foreground/65 text-xs" />
          <nav aria-label="Social media" class="inline-flex flex-wrap gap-2">
            {
              SOCIALS.map((store) => (
                <a
                  href={store.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Follow ${store.name}`}
                >
                  <Button variant={'outline'} size={'icon'}>
                    <Image src={store.icon} alt={store.name} width={28} height={28} />
                  </Button>
                </a>
              ))
            }
          </nav>
        </div>
        <BlackKey />
      </article>
      <article>
        <h2>A Hobby of Building</h2>
        <p>I also build web apps for fun and for a purpose.</p>
        <div class="flex items-center gap-2">
          <FaChevronRight className="text-muted-foreground/65 text-xs" />
          <a href="/web-development" aria-label="View my web development projects">
            <Button variant={'outline'} size={'icon'} className="text-muted-foreground"
              ><FaExternalLinkAlt />
            </Button>
          </a>
        </div>
        <BlackKey />
      </article>
    </section>
    <FormWithRecaptcha client:load />
  </div>
</RootLayout>

---
import { Button } from '@/components/ui/button';
import RootLayout from '@/layouts/RootLayout.astro';
import { ChevronDown } from 'lucide-react';
import { FaAmazon, FaDeezer, FaFolderOpen } from 'react-icons/fa';
import { FaApple, FaFile, FaMusic, FaSpotify, FaYoutube } from 'react-icons/fa6';
import { TbBrandTidal } from 'react-icons/tb';

const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'John Rod Dondoyano',
  url: 'https://johnroddondoyano.com',
  image: 'https://johnroddondoyano.com/JRLOGO.png',
  description:
    'Musician and web developer. Expressing the syntax of music on YouTube and debugging the rhythm of web development.',
  jobTitle: 'Musician & Web Developer',
  sameAs: [
    'https://youtube.com/johnroddondoyano',
    'https://tiktok.com/@dondycles',
    'https://open.spotify.com/artist/2opN2BRNgnBJIO932Kyr3U',
    'https://music.apple.com/us/artist/john-rod-dondoyano/1716913960',
    'https://facebook.com/dondycles',
    'https://instagram.com/dondycles',
    'https://x.com/dondycles',
    'https://github.com/dondycles',
  ],
};

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'Featured Offerings by John Rod Dondoyano',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: '300k Subscribers on YouTube',
      url: 'https://youtube.com/johnroddondoyano',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: '300+ Piano Sheets',
      url: 'https://mymusicsheet.com/johnroddondoyano',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: '250+ MIDI/MXL Files',
      url: 'https://payhip.com/johnroddondoyano',
    },
    {
      '@type': 'ListItem',
      position: 4,
      name: 'Stream on Apple Music',
      url: 'https://music.apple.com/us/artist/john-rod-dondoyano/1716913960',
    },
    {
      '@type': 'ListItem',
      position: 5,
      name: 'Stream on Spotify',
      url: 'https://open.spotify.com/artist/2opN2BRNgnBJIO932Kyr3U',
    },
  ],
};
---

<RootLayout
  seo={{
    title: 'Musician & Web Developer | ',
    description:
      'John Rod Dondoyano — pianist with 300k YouTube subscribers, 300+ piano sheets, and a passion for web development. Explore piano covers, sheet music, MIDI files, and more.',
  }}
>
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
  <header
    class="relative flex min-h-128 w-full items-end bg-black shadow-[0px_12px_0px_#00000011] dark:bg-white"
  >
    <img
      class="max-w-auto pointer-events-none absolute top-0 left-1/2 z-0 block h-full -translate-x-1/2 object-cover dark:hidden"
      src="JRLOGO-white.gif"
      alt="John Rod Dondoyano — Musician, and Web Developer"
      loading="eager"
    />
    <img
      class="max-w-auto pointer-events-none absolute top-0 left-1/2 z-0 hidden h-full -translate-x-1/2 object-cover dark:block"
      src="JRLOGO-black.gif"
      alt="John Rod Dondoyano — Musician, and Web Developer"
      loading="eager"
    />
    <div
      class="z-1 mx-auto w-full max-w-2xl space-y-6 bg-gradient-to-b from-transparent to-black/50 to-25% px-4 py-12 dark:to-white/50"
    >
      <h1 class="text-background text-4xl font-bold">John Rod Dondoyano</h1>
      <p class="text-muted-foreground">
        Expressing the syntax of music on <a
          href="https://youtube.com/johnroddondoyano"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="John Rod Dondoyano on YouTube">YouTube</a
        > and debugging the rhythm of <a href="/web-development">web development</a>. Sometimes
        programming from the piano bench, and often creating music from the codebase.
      </p>
      <ChevronDown client:load className="text-muted-foreground mx-auto animate-bounce" />
    </div>
  </header>
  <section
    class="[&>article>p]:text-muted-foreground mt-3 flex flex-col divide-y [&>article]:space-y-6 [&>article]:px-4 [&>article]:py-12 [&>article]:last:border-b-0 [&>article>h2]:text-2xl [&>article>h2]:font-bold"
    aria-label="Featured content and offerings"
  >
    <article>
      <h2>316k+ Subscribers on YouTube</h2>
      <p>
        Join my growing family of music lovers and piano enthusiasts who enjoy heartfelt renditions,
        tutorials, and creative arrangements.
      </p>
      <a
        href="https://youtube.com/johnroddondoyano"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Subscribe to John Rod Dondoyano on YouTube"
      >
        <Button><FaYoutube />Subscribe!</Button>
      </a>
    </article>
    <article>
      <h2>360+ Piano Sheets</h2>
      <p>
        Explore an extensive collection of piano sheet music—perfect for all skill levels. Every
        piece is transcribed with care and accuracy.
      </p>
      <a
        href="https://mymusicsheet.com/johnroddondoyano"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Buy piano sheet music by John Rod Dondoyano on MyMusicSheet"
      >
        <Button><FaMusic />Buy Piano Sheets</Button>
      </a>
    </article>
    <article>
      <h2>300+ MIDI/MusicXML Files</h2>
      <p>
        Take your piano practice to the next level with downloadable MIDI and MusicXML files
        compatible with Synthesia and notation software—great for visual learners.
      </p>
      <a
        href="https://payhip.com/johnroddondoyano"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Buy MIDI and MusicXML files by John Rod Dondoyano on Payhip"
      >
        <Button><FaFile />Buy MIDI/MusicXML Files</Button>
      </a>
    </article>
    <article>
      <h2>14k+ Listeners on Music Stores</h2>
      <p>
        Stream my piano covers on popular music platforms. Whether you're working, studying, or
        relaxing—let the music inspire you.
      </p>
      <nav aria-label="Music streaming platforms" class="inline-flex flex-wrap gap-2">
        <a
          href="https://open.spotify.com/artist/2opN2BRNgnBJIO932Kyr3U"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Listen to John Rod Dondoyano on Spotify"
        >
          <Button><FaSpotify />Spotify</Button>
        </a>
        <a
          href="https://music.apple.com/us/artist/john-rod-dondoyano/1716913960"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Listen to John Rod Dondoyano on Apple Music"
        >
          <Button><FaApple />Apple Music</Button>
        </a>
        <a
          href="https://music.youtube.com/channel/UCKk0kHA3fmAkxoaqYj_2RSw"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Listen to John Rod Dondoyano on YouTube Music"
        >
          <Button><FaYoutube />YouTube Music</Button>
        </a>
        <a
          href="https://music.amazon.com/artists/B088P7883M/john-rod-dondoyano"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Listen to John Rod Dondoyano on Amazon Music"
        >
          <Button><FaAmazon />Amazon Music</Button>
        </a>
        <a
          href="https://www.deezer.com/en/artist/94847662"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Listen to John Rod Dondoyano on Deezer"
        >
          <Button><FaDeezer />Deezer</Button>
        </a>
        <a
          href="https://tidal.com/artist/19629668"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Listen to John Rod Dondoyano on Tidal"
        >
          <Button><TbBrandTidal />Tidal</Button>
        </a>
      </nav>
    </article>
    <article>
      <h2>A Hobby of Building</h2>
      <p>I also build web apps for fun and for a purpose.</p>
      <Button><FaFolderOpen /> View Projects </Button>
    </article>
  </section>
</RootLayout>
